extends ../layout

block content
	div.log-in-box-wrapper
		div.log-in-box
			h1= title
			form
				div.form-group
					label(for="username") Username:
					input#username.form-control(type="text" name="username" placeholder="username")
				div.form-group
					label(for="password") Password:
					input#password.form-control(type="text" name="password" placeholder="password")
				button.btn.btn-default Log in
	script(src='/javascripts/admin/login.js')