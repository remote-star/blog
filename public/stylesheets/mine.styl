body,html
    margin:0
    padding:0

.log-in-box-wrapper
    width: 100%
    height: 100%

.log-in-box
    padding: 9px 14px
    margin-bottom: 14px
    background-color: #f7f7f9
    border: 1px solid #e1e1e8
    border-radius: 4px
    width: 400px
    position: absolute
    top: 50%
    left: 50%
    margin-top: -200px
    margin-left: -200px

.login-alert
	padding-top: 10px
	padding-bottom: 10px

#postInput
    -webkit-user-modify: read-write-plaintext-only
    -moz-user-modify: read-write-plaintext-only
    user-modify: read-write-plaintext-only